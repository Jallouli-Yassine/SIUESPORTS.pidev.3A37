{% extends 'base.html.twig' %}


{% block body %}
    <header>
        <link rel="stylesheet" href="{{ asset('rbt-modules1eb7.css')}}">
        <link rel='stylesheet' id='overworld-edge-modules-css' href='{{ asset('wp-content/themes/overworld/assets/css/modules.min1eb7.css?ver=6.0.3') }}' type='text/css' media='all' />

    </header>
    <body>
    <div class="overlay overflow-hidden pe-n"><img src="{{ asset('front_office/assets/img/bg/bg_shape.png') }}" alt="Background shape"></div>

    <form method="post">
        <div class="overlay overflow-hidden pe-n">

            <img src="{{ asset('front_office/assets/img/bg/bg_shape.png') }}" alt="Background shape"></div>
        <center>

            <div class="edgtf-cf7-custom-form">
                  {{ form_widget(form.nb_joueur_team, {'attr': {'class': 'edgtf-cf7-custom-form', 'placeholder': 'Enter max player','type':'number'}}) }}
