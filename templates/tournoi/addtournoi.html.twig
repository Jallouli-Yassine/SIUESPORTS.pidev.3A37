                {{ form_widget(form.nomtournoi, {'attr': {'class': 'edgtf-cf7-custom-form', 'placeholder': 'name tournoi'}}) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.device, {'attr': {'class': 'edgtf-cf7-custom-form', 'placeholder': 'device'}}) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.datestart)}}
            </div>

            <button type="submit" style="color: #ffffff;margin: 55px 0 0" class="edgtf-btn edgtf-btn-small edgtf-btn-outline"">Save</button>

        </center>
    </form>
    </body>

