{% extends 'base.html.twig' %}
{% block title %}AllCourses{% endblock %}
{% block css %}
    <style>
        .form-style {
            padding: 50px;
        }
        .form-group {
            margin-bottom: 30px;
            width: 50%;
        }
        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
        }
        ::placeholder {
            color: #000000!important;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="overlay overflow-hidden pe-n"><img src="{{ asset('front_office/assets/img/bg/bg_shape.png') }}" alt="Background shape"></div>


    <form  method="post">

        <link rel="stylesheet" href="{{ asset('rbt-modules1eb7.css')}}">
        <link rel='stylesheet' id='overworld-edge-modules-css' href='{{ asset('wp-content/themes/overworld/assets/css/modules.min1eb7.css?ver=6.0.3') }}' type='text/css' media='all' />
        <div class="overlay overflow-hidden pe-n"><img src="{{ asset('front_office/assets/img/bg/bg_shape.png') }}" alt="Background shape"></div>
        <center>
            <h2>FEEL<span style="color: #7228e2;"> FREE</span> TO ADD <span style="color: #7228e2;"></span><br />
                YOUR <span style="color: #7228e2;">GROUPE</span></h2>
        </center>
        <center>
            <div class="row">
                <div style="margin-left: 21%" class="col-7">
                    <div class="edgtf-eh-item-inner">
                        {{ form_widget(form.titre, {'attr': {'class': 'edgtf-eh-item-inner', 'placeholder': 'TITRE DE COURS'}}) }}
                    </div>
                    <div class="edgtf-eh-item-inner">
                        {{ form_widget(form.description, {'attr': {'class': 'edgtf-eh-item-inner', 'placeholder': 'DISCRIPTION DE COURS'}}) }}
                    </div>
                    <div class="edgtf-eh-item-inner">
                        {{ form_widget(form.video, {'attr': {'class': 'edgtf-eh-item-inner', 'placeholder': 'video du cours'}}) }}
                    </div>

                    <div class="edgtf-eh-item-inner">
                        {{ form_widget(form.image, {'attr': {'class': 'edgtf-eh-item-inner', 'placeholder': 'cours IMAGE'}}) }}
                    </div>
                    <div class="edgtf-eh-item-inner">
                        {{ form_widget(form.prix, {'attr': {'class': 'edgtf-eh-item-inner', 'placeholder': 'prix cours'}}) }}
                    </div>
                    <div class="edgtf-eh-item-inner">
                        {{ form_widget(form.niveau, {'attr': {'class': 'edgtf-eh-item-inner', 'placeholder': 'cours niveau'}}) }}
                    </div>
                    <div class="edgtf-eh-item-inner">
                        {{ form_widget(form.idJeux, {'attr': {'class': 'edgtf-eh-item-inner'}}) }}
                    </div>
                    <div><button href="{{path('addC')}}" type="submit" class="edgtf-btn edgtf-btn-outline edgtf-btn-huge wpcf7-form-control wpcf7-submit">add course</button></div>
                </div>
            </div>
        </center>


    </form>





{% endblock %}